// prettier-ignore
{
  "extends": "@tsconfig/react-native/tsconfig.json", 
  "compilerOptions": {
    "types": ["node"],
    "typeRoots": ["@types", "./node_modules/@types"],
    "skipLibCheck": true,
    "noErrorTruncation": true,
    "paths": { 
      "#ui/*": ["./app/ui/*"],
      "#hooks/*": ["./app/hooks/*"],
      "#models/*": ["./app/models/*"],
      "#navigators/*": ["./app/navigators/*"],
      "#screens/*": ["./app/screens/*"],
      "#services/*": ["./app/services/*"],
      "#theme/*": ["./app/theme/*"],
      "#store/*": ["./app/store/*"],
      
      "#ui": ["./app/ui/index.ts"],
      "#hooks": ["./app/hooks/index.ts"],
      "#models": ["./app/models/index.ts"],
      "#navigators": ["./app/navigators/index.ts"],
      "#screens": ["./app/screens/index.ts"],
      "#services": ["./app/services/index.ts"],
      "#theme": ["./app/theme/index.ts"],
      "#store": ["./app/store/index.ts"],
    }}
}
